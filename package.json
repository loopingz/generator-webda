{
  "name": "generator-webda",
  "version": "0.9.0",
  "description": "Generate Webda module",
  "homepage": "https://webda.io",
  "author": {
    "name": "Remi Cattiau",
    "email": "remi@cattiau.com",
    "url": ""
  },
  "files": [
    "generators"
  ],
  "main": "generators/app/index.js",
  "keywords": [
    "yeoman-generator",
    "webda"
  ],
  "devDependencies": {
    "yeoman-test": "^1.7.0",
    "yeoman-assert": "^3.1.0",
    "coveralls": "^3.0.0",
    "eslint": "^5.4.0",
    "prettier": "^1.11.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-config-xo": "^0.24.2",
    "jest": "^23.5.0"
  },
  "engines": {
    "npm": ">= 8.0.0"
  },
  "dependencies": {
    "yeoman-generator": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "git add",
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "env": {
      "jest": true,
      "node": true
    },
    "extends": [
      "plugin:prettier/recommended",
      "xo"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "object-curly-spacing": [
        "warn",
        "always"
      ],
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 120
        }
      ]
    }
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "scripts": {
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "repository": "loopingz/generator-webda",
  "license": "LGPL-3.0"
}
